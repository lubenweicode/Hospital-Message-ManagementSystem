<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Mapper.PatientsMapper">

    <!-- 添加患者 -->
    <insert id="addPatient" parameterType="com.Entity.DTO.PatientDTO" statementType="CALLABLE">
        {call AddPatient(
        #{patientName},
        #{patientGender},
        #{patientBirth},
        #{patientAddress},
        #{patientPhone},
        #{patientIdCard},
        #{patientAllergy},
        #{patientHistory},
        #{patientId, mode=OUT, jdbcType=VARCHAR}
        )}
    </insert>

    <update id="updatePatient"></update>

    <delete id="deletePatient"></delete>

<!--    <select id="getPatients" resultType="com.Entity.Pojo.Patient"></select>-->

</mapper>
